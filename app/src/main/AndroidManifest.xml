<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nanodegree.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.steps.StepListActivity"
            android:label="@string/title_step_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".features.steps.StepDetailActivity"
            android:label="@string/title_step_detail"
            android:parentActivityName=".features.steps.StepListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nanodegree.bakingapp.features.steps.StepListActivity" />
        </activity>
        <activity
            android:name=".features.stepDetails.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".features.stepDetails.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".features.stepDetails.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nanodegree.bakingapp.features.stepDetails.ItemListActivity" />
        </activity>
        <activity
            android:name=".features.recipeDetail.RecipeDetailsListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".features.recipeDetail.RecipeDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".features.recipeDetail.RecipeDetailsListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nanodegree.bakingapp.features.recipeDetail.RecipeDetailsListActivity" />
        </activity>
        <activity android:name=".features.landing.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>